# Google Cloud Platform Configuration
GCP_PROJECT_ID=your-project-id-here
GOOGLE_APPLICATION_CREDENTIALS=service-account-key.json

# BigQuery Configuration
BQ_DATASET=amazon_food_reviews
BQ_LOCATION=US

# Table Names
BQ_TABLE_REVIEWS=reviews
BQ_TABLE_REVIEWS_EMBEDDINGS=reviews_with_embeddings

# Embedding Model
# Options: text-embedding-004, text-multilingual-embedding-002
EMBEDDING_MODEL=text-embedding-004

# Data Loading
# Set to 0 or remove to load ALL reviews (568,454 reviews - may take longer)
# Set to a number (e.g., 10000) to load a sample for faster testing
REVIEW_SAMPLE_SIZE=10000

# Vector Index (Optional - for large datasets)
USE_VECTOR_INDEX=false

# Search Configuration
TOP_K_SIMILAR=10
MIN_SIMILARITY_SCORE=0.70
